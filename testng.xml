<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"> -->

<suite name="BDD Test Suite" verbose="1" parallel="tests" thread-count="2">

    <!-- Chrome on Windows -->
    <test name="CHROME" preserve-order="true" parallel="methods" thread-count="3">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <parameter name="platform" value="Windows 11"/>
        <classes>
            <class name="com.lambdatest.runner.TestRunner"/>
        </classes>
    </test>

    <!-- Firefox on Windows11 -->
    <test name="FIREFOX" preserve-order="true" parallel="methods" thread-count="3">
        <parameter name="browser" value="firefox"/>
        <parameter name="version" value="latest"/>
        <parameter name="platform" value="Windows 11"/>
        <classes>
            <class name="com.lambdatest.runner.TestRunner"/>
        </classes>
    </test>

</suite>